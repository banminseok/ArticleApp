@page "/administrations/roles/Roledetails/{Id}"

<h3>RoleDetails</h3>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="id" value="@model.Id" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblName" class="col-sm-2 col-form-label">Role Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblName" value="@model.Name" />
            </div>
        </div>
    </div>
</div>